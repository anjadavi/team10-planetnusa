    <script type="module">
      document.addEventListener("DOMContentLoaded", () => {
        const community = document.querySelector(".karrusel-community");
        const rightBtn = document.querySelector(".pil-scroll-community");
        const leftBtn = document.querySelector(".pil-scroll-left-community");

        if (community && rightBtn && leftBtn) {
          rightBtn.addEventListener("click", () => {
            community.scrollBy({ left: 300, behavior: "smooth" });
          });

          leftBtn.addEventListener("click", () => {
            community.scrollBy({ left: -300, behavior: "smooth" });
          });
        }
      });
