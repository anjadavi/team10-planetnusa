---
import SingleviewCommunity from "../components/singleview-community.astro";
import SingleviewClothes from "../components/singleview-clothes.astro";
import "../styles/singleview.css";
---

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Singleview</title>
</head>
<main class="product-page">
  <!-- GALLERY -->
  <div class="product-gallery">
    <img src="/test.jpg" alt="ZIP1 HOODIE" class="main-image" />
    <div class="thumbnails">
      <img src="/test.jpg" alt="ZIP1 HOODIE" class="thumb" />
      <img src="/test.jpg" alt="ZIP1 HOODIE" class="thumb" />
      <img src="/test.jpg" alt="ZIP1 HOODIE" class="thumb" />
    </div>
  </div>

  <!-- PRICE AND NAME -->
  <div class="product-info">
    <h1>ZIP1 HOODIE</h1>
    <p class="price">600 DKK</p>

    <!-- SIZE -->
    <div class="sizes">
      <label class="size-label">Size</label>
      <div class="size-options">
        <label class="size-option">
          <input type="radio" name="size" value="xxs" checked />
          <span>XXS</span>
        </label>
        <label class="size-option">
          <input type="radio" name="size" value="xs" />
          <span>XS</span>
        </label>
        <label class="size-option">
          <input type="radio" name="size" value="s" />
          <span>S</span>
        </label>
        <label class="size-option">
          <input type="radio" name="size" value="m" />
          <span>M</span>
        </label>
        <label class="size-option">
          <input type="radio" name="size" value="l" />
          <span>L</span>
        </label>
        <label class="size-option">
          <input type="radio" name="size" value="xl" />
          <span>XL</span>
        </label>
        <label class="size-option">
          <input type="radio" name="size" value="xxl" />
          <span>XXL</span>
        </label>
      </div>
    </div>

    <!-- BUTTONS -->
    <div class="button-section">
      <button class="add-to-bag">Add to Bag</button>
      <button class="add-to-bag">Buy with ShopPay</button>
    </div>

    <!-- DESCRIPTION -->
    <ul class="description-list">
      <li>
        Your prayers have been heard! üí´ We give you our hoodie in chocolate
        brown üç´
      </li>
      <li>
        The perfect Zip1 Hoodie might just be what you've been waiting for! We
        love it already! ü§é
      </li>
      <li>
        It's the ultimate tracksuit when paired with Vibe1 Pants in the same
        dreamy chocolate brown.
      </li>
    </ul>
  </div>
</main>

<SingleviewCommunity />

<SingleviewClothes />

<script type="module">
  const select = document.getElementById("size");
  const label = document.getElementById("sizeLabel");

  select.addEventListener("change", () => {
    const selectedText = select.options[select.selectedIndex].text;
    label.textContent = selectedText ? `Size: ${selectedText}` : "Size";
  });
</script>
